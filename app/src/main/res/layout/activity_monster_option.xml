<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMoveActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONSTER OPTION"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Type"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewName" />
    <ImageView
        android:id="@+id/imageViewColorType1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        app:layout_constraintLeft_toRightOf="@id/textViewType"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:id="@+id/imageViewColorType2"
        android:layout_width="100dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewColorType1"
        app:layout_constraintLeft_toRightOf="@id/textViewType"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />
    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Level:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewColorType2" />
    <EditText
        android:id="@+id/editTextLevel"
        android:layout_width="100dp"
        android:inputType="number"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:maxLength="3"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@id/textViewLevel"
        app:layout_constraintTop_toBottomOf="@id/imageViewColorType2"/>

    <TextView
        android:id="@+id/textViewSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Monster"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewColorType2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="65dp"
        />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="350dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSearch"
        android:singleLine="true"
        />
    <ScrollView
        android:background="@drawable/custom_border"
        android:id="@+id/listViewSearch"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextSearch"
        android:fadeScrollbars="false"
        android:isScrollContainer="false">
        <LinearLayout
            android:id="@+id/linearLayoutSearch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/textViewMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Move"
        app:layout_constraintTop_toBottomOf="@id/listViewSearch"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
        />
    <ScrollView
        android:background="@drawable/custom_border"
        android:id="@+id/listViewMove"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMove"
        android:fadeScrollbars="false"
        android:isScrollContainer="false">
        <LinearLayout
            android:id="@+id/linearLayoutMove"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listViewSelectImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageViewColorType1"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        android:visibility="visible"
        android:fadeScrollbars="false">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/imageViewPreview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>
        <WebView
            android:id="@+id/webViewPreview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonRemove"
        android:text="CONFIRM"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        />


    <Button
        android:id="@+id/buttonRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonConfirm"
        app:layout_constraintRight_toRightOf="parent"
        android:text="REMOVE"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>