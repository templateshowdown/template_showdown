<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border"
    >
    <TextView
        android:id="@+id/textViewMoveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageViewColorType"
        android:text="BLAH"/>
    <ImageView
        android:id="@+id/imageViewColorType"
        android:layout_width="50dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewMoveName"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/textViewUsePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imageViewColorType"
        app:layout_constraintTop_toBottomOf="@id/textViewMoveName"
        android:text="10/10" />
    <TextView
        android:id="@+id/textViewPowerAccuracy"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewColorType"
        android:text="Power:\nAccuracy:" />
    <TextView
        android:id="@+id/textViewEffectText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPowerAccuracy"
        android:text="Physical\nThis attack does Physical damage." />
    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Select"
        />
    <Button
        android:id="@+id/buttonDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonChoose"
        android:text="Detail"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
