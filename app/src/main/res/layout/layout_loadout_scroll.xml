<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border"
    >
    <TextView
        android:id="@+id/textViewMonsterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageViewColorType1"
        app:layout_constraintVertical_bias="0.1"
        android:text="BLAH"/>
    <ImageView
        android:id="@+id/imageViewColorType1"
        android:layout_width="50dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewMonsterName"

        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/imageViewColorType2"
        android:layout_width="50dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewMonsterName"
        app:layout_constraintLeft_toRightOf="@id/imageViewColorType1"
        />
    <TextView
        android:id="@+id/textViewBattleStateColon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewColorType2"
        app:layout_constraintBottom_toTopOf="@id/textViewBattleState"
        android:text="BATTLE STATE:"/>
    <TextView
        android:id="@+id/textViewBattleState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBattleStateColon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Not Fighting"/>

    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="EDIT"
        />
    <Button
        android:id="@+id/buttonFighter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonChoose"
        android:text="REMOVE FIGHTER"
        />
    <Button
        android:id="@+id/buttonStarter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonFighter"
        android:text="REMOVE STARTER"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
