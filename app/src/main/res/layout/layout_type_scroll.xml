<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@drawable/custom_border"
        >
        <TextView
            android:id="@+id/textViewTypeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/imageViewColorType"
            android:text="New Type"/>
        <ImageView
            android:id="@+id/imageViewColorType"
            android:layout_width="100dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTypeName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:id="@+id/editTextValue1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/textViewMux1"
            app:layout_constraintTop_toTopOf="parent"
            android:text="1"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/textViewMux1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/editTextValue2"
            app:layout_constraintTop_toTopOf="parent"
            android:text="x"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/editTextValue2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/textViewMux2"
            app:layout_constraintTop_toTopOf="parent"
            android:text="1"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/textViewMux2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="x"
            android:layout_marginTop="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
